<div id="box">

            <p><%= devise_error_messages! %></p>
     
   
      <div class="block" id="block-login">
        <h2>Login Box</h2>
        <div class="content login">
       
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name) , :html => {:class=>'form login'}) do |f| %>

            <div class="group wat-cf">
              <div class="left">
                <label class="label right">Email</label>
              </div>

              <div class="right">
               <%= f.text_field :email , :class=>'text_field' %>

              </div>
            </div>

            <div class="group wat-cf">
              <div class="left">
                <label class="label right">Password</label>
              </div>

              <div class="right">
                <%= f.password_field :password , :class=>'text_field' %>
      
              </div>
            </div>

          <div class="group wat-cf">
              <div class="left">
                <label class="label right">Remember</label>
              </div>

              <div class="right">
                <%= f.check_box :remember_me, :class=>'checkbox_field' %>

              </div>
            </div>

            <div class="group navform wat-cf">
              <div class="right" style="width: 270px;" >
                <button class="button" type="submit">
                  <%= image_tag 'web-app-theme/icons/key.png', :alt=>'Save' %>Login
                  <%= f.submit("Save" ) %>
                </button>
                
              </div>
            </div>

          <% end %>
        </div>
      </div>
 </div>
