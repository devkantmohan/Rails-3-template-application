    <div id="box">

            <p><%= devise_error_messages! %></p>


      <div class="block" id="block-login">
        <h2>Change password box</h2>
        <div class="content login">
          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put , :class=>'form login'}) do |f| %>

            <div class="group wat-cf">
              <div class="left">
                <label class="label">Password</label>
              </div>
              <div class="right">
                <%= f.hidden_field :reset_password_token %>
                <%= f.password_field :password , :class=>'text_field' %>
                <span class="description">At least 5 simbols</span>
              </div>
            </div>

             <div class="group wat-cf">
              <div class="left">
                <label class="label">Password confirmation</label>
              </div>
              <div class="right">

                <%= f.password_field :password_confirmation , :class=>'text_field' %>
                <span class="description">Repeat your password</span>
              </div>
            </div>

            <div class="group navform wat-cf">
              <div class="right" style="width: 270px;" >
                <button class="button" type="submit">
                  <%= image_tag 'web-app-theme/icons/key.png', :alt=>'Change' %>Change
                  <%= f.submit("Change my password" ) %>
                </button>

              </div>
            </div>

          <% end %>
        </div>
      </div>
 </div>
