

<div class="block" style="width: 98%; padding: 15px; text-align: center;">
  <h3 s>Please provide us an additional information about you</h3>
  <div class="content">


 <%= form_for( @user, :url => authentication_path(@user), :html=>{:id=>'info'}) do |f| %>
    <h3>Authentification information</h3>
    <div id="name-wrap" class="slider">
        <label for="name">
            Name
        </label>
        <%= f.text_field :name %>
    </div><!--/#name-wrap-->
     <div id="name-wrap" class="slider">
        <label for="lastname">
            Lastname
        </label>
        <%= f.text_field :lastname %>
    </div><!--/#name-wrap-->
    <div id="email-wrap" class="slider">
        <label for="email">
            E&ndash;mail
        </label>
       <%= f.text_field :email %><br/>
    </div><!--/#email-wrap-->
   
   
    <%= f.submit "Continue" ,:id=>'btn'%>
  <% end %>


   <div class="clear"></div>
     </div>
</div>
