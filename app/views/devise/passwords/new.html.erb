      <div class="block" id="block-login">
        <h2>Forget password box</h2>
        <div class="content login">

          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class=>'form login' }) do |f| %>

            <div class="group wat-cf">
              <div class="left">
                <label class="label right">Email</label>
              </div>

              <div class="right">
               <%= f.text_field :email , :class=>'text_field' %>

              </div>
            </div>

  

            <div class="group navform wat-cf">
              <div class="right" style="width: 270px;" >
                <button class="button" type="submit">
                  <%= image_tag 'web-app-theme/icons/key.png', :alt=>'Send' %>Send
                  <%= f.submit("Send me reset password instructions" ) %>
                </button>

              </div>
            </div>

          <% end %>
        </div>
      </div>
